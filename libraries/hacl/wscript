#!/usr/bin/env python3
# encoding: utf-8

def build(bld):
    bld.ap_stlib(
        name='hacl',
        ap_vehicle_project=False,
        ap_libraries=[],
        includes=['include'],          # aqu√≠ ya vive krml/...
        export_includes=['include'],   # propaga esta ruta a quienes usen 'hacl'
        source=[
            'src/Hacl_AEAD_Chacha20Poly1305.c',
            'src/Hacl_Chacha20.c',
            'src/Hacl_MAC_Poly1305.c',

            'src/Hacl_AEAD_Chacha20Poly1305_Simd128.c',
            'src/Hacl_Chacha20_Vec128.c',
            'src/Hacl_MAC_Poly1305_Simd128.c',
        ],
    )
